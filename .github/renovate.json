{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":semanticCommits",
    ":prHourlyLimit2"
  ],
  "labels": [
    "dependencies",
    "chore"
  ],
  "packageRules": [
    {
      "description": "Group all python dev-dependencies (ruff, mypy, pytest) into one PR.",
      "matchFileNames": [
        "pyproject.toml"
      ],
      "matchDepTypes": [
        "dependency-groups"
      ],
      "groupName": "python-dev-tools"
    },
    {
      "description": "Group GitHub Actions updates.",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions"
    },
    {
      "description": "Automerge dev dependencies if tests pass.",
      "matchGroupName": [
        "python-dev-tools",
        "github-actions"
      ],
      "automerge": true
    }
  ]
}
